{
  "installCommand": "npm install --legacy-peer-deps",
  "version": 2,
  "builds": [
    {
      "src": "server.js",  
      "use": "@vercel/node" 
    },
    {
      "src": "src/**/*",    
      "use": "@vercel/static" 
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server.js" }, 
    { "src": "/(.*)", "dest": "/src/$1" }          
  ]
}